<Window x:Class="DANsSpellChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DANsSpellChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="TitleLbl" Content="DAN's Spell Checker" HorizontalAlignment="Center"/>
        <StackPanel HorizontalAlignment="Left" Margin="25, 100, 0, 0">
            <DockPanel>
                <Label x:Name="LanguageLbl" Content="Language: "/>
                <ComboBox x:Name="LanguageCbx"  Width="200">
                    <ComboBoxItem Name="cbi1">Dansk</ComboBoxItem>
                    <ComboBoxItem Name="cbi2">English</ComboBoxItem>
                </ComboBox>
            </DockPanel>
            <TextBox x:Name="InputTbx" Text="" Height="50" Margin="0, 50, 0, 0"/>
            <Label x:Name="OutputLbl" Content="" Height="50" Margin="0, 10, 0, 0"/>
        </StackPanel>
        <Button x:Name="TestBtn" Content="Test" HorizontalAlignment="Left" Margin="391,235,0,0" VerticalAlignment="Top" Width="75" Click="TestBtn_Click"/>
    </Grid>
</Window>
